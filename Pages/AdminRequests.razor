@page "/admin/requests"

<PageTitle>All Requests</PageTitle>

<div class="page-header">
    <h2>All Contractor Requests</h2>
    <p class="text-muted">Admin view across all vendors and facilities.</p>
</div>

<div class="card mt-3">
    <div class="card-body">
        <table class="table table-striped mb-0">
            <thead>
                <tr>
                    <th>Contractor</th>
                    <th>Vendor</th>
                    <th>Facility</th>
                    <th>Start Date</th>
                    <th>Status</th>
                    <th>Reviewer</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Jane Doe</td>
                    <td>Acme Health Staffing</td>
                    <td>Houston Neighborhood</td>
                    <td>@DateTime.Today.AddDays(3).ToShortDateString()</td>
                    <td><span class="badge bg-warning text-dark">Submitted</span></td>
                    <td>admin@emerus.com</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" href="onboarding/request/1">Open</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
