@using Emerus.ETM.Admin.Pages

<div class="card-section">
    <h5>Hardware</h5>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="NeedsLaptop" @bind="Model.NeedsLaptop" />
                <label class="form-check-label" for="NeedsLaptop">Needs Laptop</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="NeedsDock" @bind="Model.NeedsDock" />
                <label class="form-check-label" for="NeedsDock">Needs Docking Station</label>
            </div>
        </div>
        <div class="col-md-4">
            <label class="form-label">Monitor Count</label>
            <input class="form-control" type="number" min="0" max="4" @bind="Model.MonitorCount" />
        </div>
    </div>
    <div class="row g-3">
        <div class="col-md-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="NeedsHeadset" @bind="Model.NeedsHeadset" />
                <label class="form-check-label" for="NeedsLaptop">Needs Headset</label>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="NeedsHotSpot" @bind="Model.NeedsHotspot" />
                <label class="form-check-label" for="NeedsDock">Needs Hot Spot</label>
            </div>
        </div>
        <div class="col-md-4">
            <label class="form-label">Notes</label>
            <input class="form-control" type="number" min="0" max="4" @bind="Model.Notes" />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public OnboardingNew.HardwareModel Model { get; set; } = default!;
}
