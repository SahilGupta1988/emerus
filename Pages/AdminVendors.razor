@page "/admin/config/vendors"

@using Emerus.ETM.Admin.Data
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Db

<PageTitle>Vendors</PageTitle>

<div class="page-header">
    <h2>Vendors</h2>
    <p class="text-muted">Vendors loaded from database (etm.Partner).</p>
</div>

<div class="card mt-3">
    <div class="card-body">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Vendor</th>
                    <th>Code</th>
                    <th>Active</th>
                    <th>Users</th>
                </tr>
            </thead>
            <tbody>
                @if (Partners is null)
                {
                    <tr><td colspan="4">Loading...</td></tr>
                }
                else if (!Partners.Any())
                {
                    <tr><td colspan="4">No vendors found.</td></tr>
                }
                else
                {
                    @foreach (var p in Partners)
                    {
                        <tr>
                            <td>@p.DisplayName</td>
                            <td>@p.PartnerCode</td>
                            <td>@(p.IsActive ? "Yes" : "No")</td>
                            <td></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<Partner>? Partners;

    protected override async Task OnInitializedAsync()
    {
        //Vendors = await Db.Vendors.AsNoTracking().ToListAsync();
        Partners = await Db.Partners
        .AsNoTracking()
        .OrderBy(p => p.DisplayName)
        .ToListAsync();

    }
}
