@page "/"
@layout LoginLayout
@attribute [AllowAnonymous]



<div class="card-body p-3 text-center">
    <div class="mb-4 d-flex align-items-center justify-content-center">
        <div class="brand-icon d-flex align-items-center justify-content-center me-2" aria-hidden="true">
            <svg width="36" height="36" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" focusable="false" aria-hidden="true">
                <rect x="1" y="1" width="10.5" height="10.5" fill="#f35325" />
                <rect x="12.5" y="1" width="10.5" height="10.5" fill="#81bc06" />
                <rect x="1" y="12.5" width="10.5" height="10.5" fill="#05a6f0" />
                <rect x="12.5" y="12.5" width="10.5" height="10.5" fill="#ffba08" />
            </svg>
        </div>
    </div>

    <h3 class="mb-1">Sign in</h3>
    <p class="text-muted small mb-3">Use your Azure AD credentials to access the onboarding portal.</p>

    <button class="btn btn-primary w-100 d-flex align-items-center justify-content-center gap-2 login-btn" @onclick="HandleLogin" aria-label="Sign in with Microsoft account">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false">
            <rect x="1" y="1" width="10.5" height="10.5" fill="#f35325" />
            <rect x="12.5" y="1" width="10.5" height="10.5" fill="#81bc06" />
            <rect x="1" y="12.5" width="10.5" height="10.5" fill="#05a6f0" />
            <rect x="12.5" y="12.5" width="10.5" height="10.5" fill="#ffba08" />
        </svg>
        <span class="fw-semibold">Sign in with Microsoft</span>
    </button>

    <div class="mt-4">
        <small class="text-muted d-block mb-1">By signing in you agree to the</small>
        <small class="text-muted d-block">
            <a href="/privacy" class="link-primary">Privacy policy</a>
        </small>
    </div>
</div>



<style>
    /* Slightly increased card width while keeping responsiveness */
    .login-card {
        border: 0;
        border-radius: 10px;
        max-width: 480px;
        width: 100%;
    }

    .brand-icon {
        width: 56px;
        height: 56px;
        border-radius: 8px;
        background: rgba(0,0,0,0.03);
    }

    .login-btn {
        padding: .55rem 1rem;
        font-weight: 600;
        border-radius: .5rem;
    }

        .login-btn svg {
            filter: drop-shadow(0 1px 0 rgba(0,0,0,0.06));
        }
</style>
