@page "/onboarding/request/{requestId:guid}"
@using Emerus.ETM.Admin.Data
@using Microsoft.EntityFrameworkCore
@using System.Linq
@using System.Data.Common
@using System.Data
@using static Emerus.ETM.Admin.Pages.AccessStep.AccessStep
@using Microsoft.Extensions.Logging
@inject AppDbContext Db
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject ILogger<RequestDetail> Logger

@if (IsLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border" role="status" aria-hidden="true"></div>
        <span class="ms-3">Loading request...</span>
    </div>
}
else if (IsNotFound)
{
    <div class="alert alert-warning">Request not found.</div>
}
else
{
    <div class="card-section">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h4 class="mb-0">@DisplayName</h4>
                <div class="text-muted">@VendorName</div>
                <div class="text-muted small mt-1">@Demographics.PersonalEmail</div>
            </div>

            <div class="text-end">
                <div class="mb-2">
                    <span class="badge @StatusBadgeClass">@StatusText</span>
                </div>
                <div class="text-muted small">Created: @CreatedAt.ToLocalTime().ToString("g")</div>
                @if (SubmittedAt is not null)
                {
                    <div class="text-muted small">Submitted: @SubmittedAt.Value.ToLocalTime().ToString("g")</div>
                }

                <div class="mt-2 d-flex gap-2 justify-content-end">
                    <button class="btn btn-outline-secondary btn-sm" @onclick="GoBack">Back</button>
                    <button class="btn btn-light btn-sm" @onclick="Print">Print</button>

                    @if (ShowApproveButton)
                    {
                        <button class="btn btn-success btn-sm" @onclick="ApproveRequest" disabled="@IsLoading">Approve</button>
                    }
                    @if (ShowRejectButton)
                    {
                        <button class="btn btn-danger btn-sm" @onclick="PromptReject" disabled="@IsLoading">Reject</button>
                    }
                    @if (ShowReturnButton)
                    {
                        <button class="btn btn-warning btn-sm" @onclick="PromptReturn" disabled="@IsLoading">Return</button>
                    }
                </div>
            </div>
        </div>

        <div class="row g-3">
            <!-- Left column: summary + access list -->
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>Summary</strong>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-5 text-muted">Facility</dt>
                            <dd class="col-7">@Badge.PrimaryFacility</dd>

                            <dt class="col-5 text-muted">Request Type</dt>
                            <dd class="col-7">@Badge.RequestType</dd>

                            <dt class="col-5 text-muted">Start Date</dt>
                            <dd class="col-7">@((JobInfo.StartDate != default) ? JobInfo.StartDate.ToShortDateString() : "-")</dd>

                            <dt class="col-5 text-muted">Contact</dt>
                            <dd class="col-7">@Demographics.PersonalEmail</dd>
                        </dl>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        
                        <div>
                            <small class="text-muted">Status</small>
                            <div><span class="badge @StatusBadgeClass">@StatusText</span></div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>Access Requested</strong>
                    </div>
                    <div class="card-body p-0">
                        @if (AccessInfo.RequestedTargets is null || !AccessInfo.RequestedTargets.Any())
                        {
                            <div class="p-3 text-muted">No access requested.</div>
                        }
                        else
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var t in AccessInfo.RequestedTargets)
                                {
                                    var display = TargetCatalog?.FirstOrDefault(tc => tc.TargetId == t.TargetId)?.DisplayName ?? t.TargetId.ToString();
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div>
                                            <div class="fw-semibold">@display</div>
                                            <div class="small text-muted">@t.Environment @if(!string.IsNullOrWhiteSpace(t.ChangeType)){ <span> · @t.ChangeType</span> }</div>
                                        </div>
                                        <div class="text-end">
                                            <div><span class="badge bg-secondary">@t.CreatedAt.ToLocalTime().ToString("d")</span></div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>

            <!-- Right column: detail cards -->
            <div class="col-md-8">
                <div class="row g-3">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <strong>Demographics</strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6 class="mb-1">@Demographics.PreferredFirstName @Demographics.PreferredLastName</h6>
                                        <div class="text-muted">(@Demographics.FirstName @Demographics.LastName)</div>
                                        <hr />
                                        <div><strong>Email</strong>: @Demographics.PersonalEmail</div>
                                        <div><strong>Phone</strong>: @Demographics.CellPhone</div>
                                    </div>
                                    <div class="col-md-6">
                                        <div><strong>DOB</strong>: @((Demographics.DateOfBirth != default) ? Demographics.DateOfBirth.ToShortDateString() : "-")</div>
                                        <div><strong>Gender</strong>: @Demographics.Gender</div>
                                        <div class="mt-2"><strong>Address</strong>:</div>
                                        <div class="text-muted">@Demographics.AddressLine1</div>
                                        @if (!string.IsNullOrWhiteSpace(Demographics.AddressLine2))
                                        {
                                            <div class="text-muted">@Demographics.AddressLine2</div>
                                        }
                                        <div class="text-muted">@Demographics.City, @Demographics.StateProvince @Demographics.PostalCode</div>
                                        <div class="text-muted">@Demographics.CountryCode</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <strong>Job & Dates</strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div><strong>Job title</strong>: @JobInfo.JobTitle</div>
                                        <div><strong>Department</strong>: @JobInfo.Department</div>
                                        <div><strong>Agency</strong>: @JobInfo.AgencyName</div>
                                    </div>
                                    <div class="col-md-6">
                                        <div><strong>External ID</strong>: @JobInfo.ExternalEmployeeId</div>
                                        <div><strong>Prior Employee</strong>: @((JobInfo.PriorEmployeeFlag) ? "<span class=\"badge bg-success\">Yes</span>" : "<span class=\"badge bg-secondary\">No</span>")</div>
                                        <div><strong>Start date</strong>: @((JobInfo.StartDate != default) ? JobInfo.StartDate.ToShortDateString() : "-")</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <strong>Hardware</strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4"><strong>Laptop</strong>: @(Hardware.NeedsLaptop ? (MarkupString)"<span class=\"badge bg-success\">Yes</span>" : (MarkupString)"<span class=\"badge bg-secondary\">No</span>")</div>
                                    <div class="col-md-4"><strong>Dock</strong>: @(Hardware.NeedsDock ? (MarkupString)"<span class=\"badge bg-success\">Yes</span>" : (MarkupString)"<span class=\"badge bg-secondary\">No</span>")</div>
                                    <div class="col-md-4"><strong>Monitors</strong>: @Hardware.MonitorCount</div>
                                </div>
                                <div class="mt-3"><strong>Notes</strong>: @(!string.IsNullOrWhiteSpace(Hardware.Notes) ? Hardware.Notes : "None")</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <strong>Badge</strong>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-4 text-muted">Requested</dt>
                                    <dd class="col-8">
                                        @if (Badge.NeedsBadge)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </dd>

                                    <dt class="col-4 text-muted">Facility</dt>
                                    <dd class="col-8">@Badge.PrimaryFacility</dd>

                                    <dt class="col-4 text-muted">Access level</dt>
                                    <dd class="col-8">@Badge.RequestType</dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <!-- Compliance / Documents -->
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <strong>Compliance</strong>
                            </div>
                            <div class="card-body">
                                @if (ComplianceDocuments is null || !ComplianceDocuments.Any())
                                {
                                    <div class="text-muted">No compliance documents uploaded.</div>
                                }
                                else
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var d in ComplianceDocuments)
                                        {
                                            <li class="list-group-item d-flex gap-3 align-items-center">
                                                <div class="file-meta d-flex align-items-center" style="min-width:0;">
                                                    <span class="file-icon me-2">📄</span>
                                                    <div class="text-truncate" style="max-width: 50vw;">
                                                        <div class="fw-medium text-truncate">@d.FileName</div>
                                                        <div class="text-muted small">@d.DocumentType @if(!string.IsNullOrWhiteSpace(d.UploadedByUpn)){<span> · @d.UploadedByUpn</span>} <span> · @d.UploadedAt.ToLocalTime().ToString("g")</span></div>
                                                    </div>
                                                </div>

                                                <div class="ms-auto d-flex align-items-center gap-2">
                                                    <a class="btn btn-sm btn-outline-primary" href="@($"/api/files/download/{d.DocumentId}")" target="_blank" rel="noopener" title="Download @d.FileName">Download</a>

                                                    <button class="btn btn-sm btn-outline-success" @onclick="() => ApproveDocument(d.DocumentId)" title="Approve document" disabled="@IsLoading">Approve</button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => PromptRejectDocument(d.DocumentId)" title="Reject document" disabled="@IsLoading">Reject</button>

                                                    <span class="badge @GetBadgeClass(d.Status)">@(!string.IsNullOrWhiteSpace(d.Status) ? d.Status : "Unknown")</span>
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div> <!-- card-section -->
}

@if (ShowCommentModal)
{
    <div class="modal d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@ModalTitle</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CancelComment"></button>
                </div>
                <div class="modal-body">
                    <label class="form-label">Comments</label>
                    <textarea class="form-control" @bind="CommentText" rows="4" placeholder="Add comments (required)"></textarea>
                    @if (!string.IsNullOrEmpty(CommentError))
                    {
                        <div class="text-danger mt-2">@CommentError</div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelComment" disabled="@IsLoading">Cancel</button>
                    <button class="btn btn-primary" @onclick="ConfirmAction" disabled="@IsLoading">Confirm</button>
                </div>
            </div>
        </div>
    </div>
}

@if (ShowDocRejectModal)
{
    <div class="modal d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Reject document — add notes</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="CancelDocReject"></button>
                </div>
                <div class="modal-body">
                    <label class="form-label">Notes (required)</label>
                    <textarea class="form-control" @bind="DocRejectNotes" rows="4" placeholder="Enter reason for rejection"></textarea>
                    @if (!string.IsNullOrEmpty(DocRejectError))
                    {
                        <div class="text-danger mt-2">@DocRejectError</div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CancelDocReject" disabled="@IsLoading">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmRejectDocument" disabled="@IsLoading">Reject</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid requestId { get; set; }

    private bool IsNotFound { get; set; }
    private bool IsLoading { get; set; }

    // display models
    private OnboardingNew.DemographicsModel Demographics { get; set; } = new();
    private OnboardingNew.JobModel JobInfo { get; set; } = new();
    private OnboardingNew.AccessModel AccessInfo { get; set; } = new();
    private List<TargetCatalogModel> TargetCatalog { get; set; } = new();
    private OnboardingNew.HardwareModel Hardware { get; set; } = new();
    private OnboardingNew.BadgeModel Badge { get; set; } = new();

    // additional display fields
    private string VendorName { get; set; } = string.Empty;
    private string DisplayName { get; set; } = string.Empty;
    private string StatusText { get; set; } = string.Empty;
    private string StatusBadgeClass { get; set; } = "bg-secondary";
    private DateTime CreatedAt { get; set; }
    private DateTime? SubmittedAt { get; set; }

    // Compliance documents for the request
    private List<ContractorDocument> ComplianceDocuments { get; set; } = new();

    // Button visibility: hide all three buttons once the request is in a final state:
    // final states considered: "Approved", "Cancelled", "Draft"
    private bool ButtonsVisible => StatusText != "Approved" && StatusText != "Cancelled" && StatusText != "Draft";
    private bool ShowApproveButton => ButtonsVisible;
    private bool ShowRejectButton => ButtonsVisible;
    private bool ShowReturnButton => ButtonsVisible;

    // comment modal state (request-level)
    private bool ShowCommentModal { get; set; }
    private string ActionPending { get; set; } = string.Empty; // "Reject" or "Return"
    private string CommentText { get; set; } = string.Empty;
    private string? CommentError { get; set; }

    // document reject modal state (per-document)
    private bool ShowDocRejectModal { get; set; }
    private Guid PendingDocId { get; set; } = Guid.Empty;
    private string DocRejectNotes { get; set; } = string.Empty;
    private string? DocRejectError { get; set; }

    private string ModalTitle => ActionPending == "Reject" ? "Reject request — add comment" : ActionPending == "Return" ? "Return request — add comment" : "Add comment";
    
    private string? requesterUpn = null;

    protected override async Task OnParametersSetAsync()
    {
        IsLoading = true;
        IsNotFound = false;

        Logger?.LogDebug("Loading request details for requestId={RequestId}", requestId);

        var currentUser = _commonService is not null ? await _commonService.GetCurrentUserAsync() : null;
        if (currentUser?.IsAuthenticated == true && !string.IsNullOrWhiteSpace(currentUser.UserEmail))
        {
            requesterUpn = currentUser.UserEmail.Trim();
            requesterUpn =requesterUpn.ToLowerInvariant();
        }
        try
        {
            try
            {
                var request = await Db.ContractorRequests
                    .Include(r => r.ContractorPerson)
                    .Include(r => r.ContractorHardwareRequest)
                    .Include(r => r.Partner)
                    .FirstOrDefaultAsync(r => r.RequestId == requestId);

                if (request is null)
                {
                    IsNotFound = true;
                    Logger?.LogWarning("Request not found: {RequestId}", requestId);
                    return;
                }

                var person = request.ContractorPerson;
                var hardware = request.ContractorHardwareRequest;

                Demographics = new OnboardingNew.DemographicsModel
                {
                    FirstName = person?.FirstName ?? string.Empty,
                    PreferredFirstName = person?.PreferredFirstName ?? string.Empty,
                    LastName = person?.LastName ?? string.Empty,
                    PreferredLastName = person?.PreferredLastName ?? string.Empty,
                    PersonalEmail = person?.PersonalEmail ?? string.Empty,
                    CellPhone = person?.CellPhone ?? string.Empty,
                    DateOfBirth = person?.DateOfBirth ?? default,
                    Gender = person?.Gender ?? string.Empty,
                    AddressLine1 = person?.AddressLine1 ?? string.Empty,
                    AddressLine2 = person?.AddressLine2 ?? string.Empty,
                    City = person?.City ?? string.Empty,
                    StateProvince = person?.StateProvince ?? string.Empty,
                    PostalCode = person?.PostalCode ?? string.Empty,
                    CountryCode = person?.CountryCode ?? string.Empty,
                    Identity = string.Empty
                };

                JobInfo = new OnboardingNew.JobModel
                {
                    AgencyName = person?.AgencyName ?? string.Empty,
                    JobTitle = person?.JobTitle ?? string.Empty,
                    JobCode = person?.JobCode ?? string.Empty,
                    Department = person?.Department ?? string.Empty,
                    ExternalEmployeeId = person?.ExternalEmployeeId ?? string.Empty,
                    PriorEmployeeFlag = person?.PriorEmployeeFlag ?? false,
                    StartDate = person?.StartDate ?? default
                };

                AccessInfo = new OnboardingNew.AccessModel
                {
                    RequestedTargets = await Db.ContractorAccessRequest
                        .Where(a => a.RequestId == requestId)
                        .Select(a => new OnboardingNew.RequestTargetModel
                        {
                            AccessRequestId = a.AccessRequestId,
                            RequestId = a.RequestId,
                            TargetId = a.TargetId,
                            Environment = a.Environment,
                            ChangeType = a.ChangeType,
                            MirrorUserUpn = a.MirrorUserUpn,
                            DetailJson = a.DetailJson,
                            CreatedAt = a.CreatedAt,
                            CreatedByUpn = a.CreatedByUpn
                        }).ToListAsync()
                };

                Hardware = new OnboardingNew.HardwareModel
                {
                    NeedsLaptop = hardware?.NeedsLaptop ?? false,
                    NeedsDock = hardware?.NeedsDock ?? false,
                    MonitorCount = hardware?.MonitorCount ?? 0,
                    NeedsHeadset = hardware?.NeedsHeadset ?? false,
                    NeedsHotspot = hardware?.NeedsHotspot ?? false,
                    Notes = hardware?.Notes ?? string.Empty
                };

                Badge = new OnboardingNew.BadgeModel
                {
                    NeedsBadge = !string.IsNullOrWhiteSpace(request.RequestType),
                    PrimaryFacility = request.PrimaryFacility ?? string.Empty,
                    RequestType = request.RequestType ?? string.Empty
                };

                // Display metadata
                VendorName = request.Partner?.DisplayName ?? string.Empty;
                DisplayName = string.IsNullOrWhiteSpace(Demographics.PreferredFirstName) ? $"{Demographics.FirstName} {Demographics.LastName}".Trim() : $"{Demographics.PreferredFirstName} {Demographics.PreferredLastName}".Trim();
                StatusText = request.Status ?? string.Empty;
                StatusBadgeClass = request.Status switch
                {
                    "Submitted" => "bg-success",
                    "In Progress" => "bg-info",
                    "Draft" => "bg-secondary",
                    "Approved" => "bg-primary",
                    "Cancelled" => "bg-danger",
                    "Returned" => "bg-warning",
                    _ => "bg-secondary"
                };
                CreatedAt = request.CreatedAt;
                SubmittedAt = request.SubmittedAt;

                // Load TargetCatalog from iam.TargetCatalog table
                var list = new List<TargetCatalogModel>();
                DbConnection? conn = null;
                try
                {
                    conn = Db.Database.GetDbConnection();
                    await conn.OpenAsync();

                    using var cmd = conn.CreateCommand();
                    cmd.CommandText = "SELECT TargetId, DisplayName FROM iam.TargetCatalog WHERE IsActive = 1 ORDER BY DisplayName";
                    using var reader = await cmd.ExecuteReaderAsync();

                    while (await reader.ReadAsync())
                    {
                        var item = new TargetCatalogModel();

                        if (!reader.IsDBNull(0))
                        {
                            item.TargetId = reader.GetGuid(0);
                        }

                        if (!reader.IsDBNull(1))
                        {
                            item.DisplayName = reader.GetString(1);
                        }

                        list.Add(item);
                    }

                    TargetCatalog = list;
                }
                catch (Exception ex)
                {
                    Logger?.LogError(ex, "Failed to load TargetCatalog from DB");
                    TargetCatalog = new List<TargetCatalogModel>();
                }
                finally
                {
                    if (conn is not null && conn.State == ConnectionState.Open)
                    {
                        await conn.CloseAsync();
                    }
                }

                // Load compliance documents for this request (uses IFileService injected via _Imports.razor)
                try
                {
                    if (requestId != Guid.Empty)
                    {
                        ComplianceDocuments = await _fileService.GetDocumentByRequestIdAsync(requestId).ConfigureAwait(false);
                    }
                    else
                    {
                        ComplianceDocuments = new List<ContractorDocument>();
                    }
                }
                catch (Exception ex)
                {
                    Logger?.LogError(ex, "Failed to load compliance documents for request {RequestId}", requestId);
                    ComplianceDocuments = new List<ContractorDocument>();
                }
            }
            catch (Exception ex)
            {
                Logger?.LogError(ex, "Unhandled error while loading request details for {RequestId}", requestId);
                throw;
            }
        }
        finally
        {
            IsLoading = false;
            Logger?.LogDebug("Finished loading request details for requestId={RequestId}", requestId);
        }
    }

    void GoBack()
    {
        Navigation.NavigateTo("/");
    }

    
    async Task Print()
    {
        try
        {
            await JS.InvokeVoidAsync("print");
        }
        catch (Exception ex)
        {
            Logger?.LogWarning(ex, "Print call failed for request {RequestId}", requestId);
            // ignore
        }
    }

    void PromptReject()
    {
        ActionPending = "Reject";
        CommentText = string.Empty;
        CommentError = null;
        ShowCommentModal = true;
    }

    void PromptReturn()
    {
        ActionPending = "Return";
        CommentText = string.Empty;
        CommentError = null;
        ShowCommentModal = true;
    }

    void CancelComment()
    {
        ShowCommentModal = false;
        ActionPending = string.Empty;
        CommentText = string.Empty;
        CommentError = null;
    }

    private async Task ConfirmAction()
    {
        // require a comment
        if (string.IsNullOrWhiteSpace(CommentText))
        {
            CommentError = "Please enter a comment.";
            return;
        }

        IsLoading = true;
        try
        {
            var req = await Db.ContractorRequests.FirstOrDefaultAsync(r => r.RequestId == requestId);
            if (req is null)
            {
                Logger?.LogWarning("ConfirmAction: request not found {RequestId}", requestId);
                await JS.InvokeVoidAsync("alert", "Request not found.");
                return;
            }

            if (ActionPending == "Reject")
            {
                req.Status = "Cancelled";
                req.CancelledAt = DateTime.UtcNow;
                req.Comments = CommentText;
            }
            else if (ActionPending == "Return")
            {
                req.Status = "Draft";
                req.Comments = CommentText;
            }
            else
            {
                Logger?.LogWarning("ConfirmAction: unknown ActionPending={ActionPending} for {RequestId}", ActionPending, requestId);
                // unknown action
                return;
            }

            await Db.SaveChangesAsync();

            Logger?.LogInformation("Request {RequestId} status updated to {Status} by {User}", requestId, req.Status, requesterUpn ?? "unknown");

            // update UI
            StatusText = req.Status;
            StatusBadgeClass = req.Status switch
            {
                "Approved" => "bg-primary",
                "Cancelled" => "bg-danger",
                "Draft" => "bg-warning",
                _ => "bg-secondary"
            };

            // hide modal and reload display
            ShowCommentModal = false;
            ActionPending = string.Empty;
            CommentText = string.Empty;
            CommentError = null;

            await OnParametersSetAsync();

            try
            {
                if (req.Status == "Cancelled")
                    await JS.InvokeVoidAsync("alert", "Request rejected.");
                else if (req.Status == "Draft")
                    await JS.InvokeVoidAsync("alert", "Request returned for changes.");
            }
            catch (Exception ex)
            {
                Logger?.LogDebug(ex, "JS alert failed after ConfirmAction for {RequestId}", requestId);
                // ignore JS errors
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Failed to perform ConfirmAction for {RequestId}", requestId);
            await JS.InvokeVoidAsync("alert", "Failed to perform action.");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task ApproveRequest()
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", "Approve this request?");
        if (!confirmed) return;

        Logger?.LogDebug("User confirmed approve for request {RequestId}", requestId);

        // Ensure at least one compliance document is approved before approving request
        try
        {
            var approvedCount = await Db.Set<ContractorDocument>()
                .CountAsync(d => d.RequestId == requestId && d.Status == "Approved");

            if (approvedCount == 0)
            {
                Logger?.LogWarning("Attempt to approve request {RequestId} with no approved documents", requestId);
                await JS.InvokeVoidAsync("alert", "At least one compliance document must be approved before approving the request.");
                return;
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Unable to verify document approvals for {RequestId}", requestId);
            // If the check fails for some reason, prevent approving to avoid inconsistent state.
            await JS.InvokeVoidAsync("alert", "Unable to verify document approvals. Try again later.");
            return;
        }

        IsLoading = true;
        try
        {
            var req = await Db.ContractorRequests.FirstOrDefaultAsync(r => r.RequestId == requestId);
            if (req is null)
            {
                Logger?.LogWarning("ApproveRequest: request not found {RequestId}", requestId);
                await JS.InvokeVoidAsync("alert", "Request not found.");
                return;
            }

            req.Status = "Approved";
            req.ApprovedAt = DateTime.UtcNow;
            // optionally set completed/approved metadata here, e.g. CompletedAt
            await Db.SaveChangesAsync();

            Logger?.LogInformation("Request {RequestId} approved by {User}", requestId, requesterUpn ?? "unknown");

            StatusText = req.Status;
            StatusBadgeClass = "bg-primary";

            // reload display data so ButtonsVisible re-evaluates
            await OnParametersSetAsync();

            try
            {
                await JS.InvokeVoidAsync("alert", "Request approved successfully.");
            }
            catch (Exception ex)
            {
                Logger?.LogDebug(ex, "JS alert failed after ApproveRequest for {RequestId}", requestId);
                // ignore JS errors
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Failed to approve request {RequestId}", requestId);
            await JS.InvokeVoidAsync("alert", "Failed to approve request.");
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task ApproveDocument(Guid documentId)
    {
        IsLoading = true;
        try
        {
            // persist via EF to ensure DB is updated
            var doc = await Db.Set<ContractorDocument>().FirstOrDefaultAsync(d => d.DocumentId == documentId);
            if (doc != null)
            {
                doc.Status = "Approved";
                doc.VerifiedByUpn = requesterUpn;
                doc.VerifiedAt = DateTime.UtcNow;
                doc.Notes = "";
                await Db.SaveChangesAsync();

                Logger?.LogInformation("Document {DocumentId} approved by {User} for request {RequestId}", documentId, requesterUpn ?? "unknown", requestId);

                await OnParametersSetAsync();
            }
            else
            {
                Logger?.LogWarning("ApproveDocument: document not found {DocumentId}", documentId);
            }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error approving document {DocumentId} for request {RequestId}", documentId, requestId);
            await JS.InvokeVoidAsync("alert", $"Error approving document: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    // Opens reject-notes modal for a specific document.
    private void PromptRejectDocument(Guid documentId)
    {
        PendingDocId = documentId;
        DocRejectNotes = string.Empty;
        DocRejectError = null;
        ShowDocRejectModal = true;
    }

    private void CancelDocReject()
    {
        ShowDocRejectModal = false;
        PendingDocId = Guid.Empty;
        DocRejectNotes = string.Empty;
        DocRejectError = null;
    }

    private async Task ConfirmRejectDocument()
    {
        // require notes for rejection
        if (string.IsNullOrWhiteSpace(DocRejectNotes))
        {
            DocRejectError = "Please enter notes describing the reason for rejection.";
            return;
        }

        IsLoading = true;
        try
        {
            var doc = await Db.Set<ContractorDocument>().FirstOrDefaultAsync(d => d.DocumentId == PendingDocId);
            if (doc is null)
            {
                Logger?.LogWarning("ConfirmRejectDocument: document not found {DocumentId}", PendingDocId);
                await JS.InvokeVoidAsync("alert", "Document not found.");
                return;
            }

            doc.Status = "Rejected";
            doc.VerifiedByUpn = requesterUpn;
            doc.Notes = DocRejectNotes;
            doc.VerifiedAt = DateTime.UtcNow;

            await Db.SaveChangesAsync();

            Logger?.LogInformation("Document {DocumentId} rejected by {User} for request {RequestId} — notes: {Notes}", doc.DocumentId, requesterUpn ?? "unknown", doc.RequestId, DocRejectNotes);

            // close modal and refresh list
            ShowDocRejectModal = false;
            PendingDocId = Guid.Empty;
            DocRejectNotes = string.Empty;
            DocRejectError = null;

            await OnParametersSetAsync();

            // try { await JS.InvokeVoidAsync("alert", "Document rejected."); } catch { }
        }
        catch (Exception ex)
        {
            Logger?.LogError(ex, "Error rejecting document {DocumentId} for request {RequestId}", PendingDocId, requestId);
            await JS.InvokeVoidAsync("alert", $"Error rejecting document: {ex.Message}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    // Returns a bootstrap badge class for a given document status.
    // Adjust mapping to your project's conventions as needed.
    private string GetBadgeClass(string? status)
    {
        return (status ?? string.Empty) switch
        {
            "Uploaded" => "bg-success",
            "Approved" => "bg-primary",
            "Rejected" => "bg-danger",
            "Verified" => "bg-info",
            "Archived" => "bg-secondary",
            _ => "bg-secondary"
        };
    }
