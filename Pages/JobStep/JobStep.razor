@attribute [Authorize(Roles = "Approver,Requestor")]
@using Emerus.ETM.Admin.Pages

<div class="card-section">
    <h5>Job & Dates</h5>

    <!-- Row 1: Agency & Job Title -->
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Agency Name</label>
            <input class="form-control" @bind="Model.AgencyName" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Job Title</label>
            <input class="form-control" @bind="Model.JobTitle" />
        </div>
    </div>

    <!-- Row 2: Job Code & Department -->
    <div class="row g-3 mt-2">
        <div class="col-md-6">
            <label class="form-label">Job Code</label>
            <input class="form-control" @bind="Model.JobCode" />
        </div>

        <div class="col-md-6">
            <label class="form-label">Department</label>
            <input class="form-control" @bind="Model.Department" />
        </div>
    </div>

    <!-- Row 3: External ID, Prior Employee, Start Date -->
    <div class="row g-3 mt-3 align-items-end">
        <div class="col-md-6">
            <label class="form-label">External Employee ID</label>
            <input class="form-control" @bind="Model.ExternalEmployeeId" />
        </div>

        <div class="col-md-3">
            <div class="form-check form-switch mb-2">
                <input class="form-check-input" type="checkbox" @bind="Model.PriorEmployeeFlag" id="priorEmployeeSwitch" />
                <label class="form-check-label" for="priorEmployeeSwitch">Prior Employee</label>
            </div>
        </div>

        <div class="col-md-3">
            <label class="form-label">Start Date</label>
            <input class="form-control" @bind="Model.StartDate" type="date" />
        </div>
    </div>
</div>